<Window x:Class="e_CPF_Deploy.ExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:e_CPF_Deploy"
        mc:Ignorable="d"
        Title="Export Certificate" Height="300" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="label" Content="Certificate Path:" HorizontalAlignment="Left" Margin="40,38,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Password:" HorizontalAlignment="Left" Margin="40,96,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_filePath" Height="23" Margin="138,38,40,0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center" IsReadOnly="True"/>
        <PasswordBox x:Name="pwdbox" Margin="137,96,40,0" VerticalAlignment="Top" Height="26" VerticalContentAlignment="Center"/>
        <Button x:Name="b_selectFile" Content="Select Certificate" Margin="40,156,314,40" Click="B_selectFile_Click" FontSize="18"/>
        <Button x:Name="b_exportCertificate" Content="Export Certificate" Margin="314,156,40,40" Click="B_exportCertificate_Click" FontSize="18"/>

    </Grid>
</Window>
